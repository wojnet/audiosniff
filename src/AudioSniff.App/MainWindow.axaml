<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:components="clr-namespace:AudioSniff.App.Components"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
	Width="400" Height="400"
    x:Class="AudioSniff.App.MainWindow"
    Title="AudioSniff"
	CanResize="False"
	ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
>
	<Border Background="#333333">
		<DockPanel>
			<DockPanel Height="40" Background="#222222" LastChildFill="True" PointerPressed="TopBar_PointerPressed" DockPanel.Dock="Top">
				<TextBlock
					Text="AudioSniff.exe"
					VerticalAlignment="Center"
					Margin="10,0"
					FontFamily="{DynamicResource PixelFont}"
					FontSize="12"
					Foreground="White"
					DockPanel.Dock="Left"
				/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
					<Button Classes="TopbarButton" Click="Minimize_Click" Margin="0,0,3,0">
						<TextBlock Text="-" Margin="0,2,0,0" FontFamily="{DynamicResource PixelFont}" FontSize="17" />
					</Button>
					<Button Classes="TopbarButton" Click="Close_Click">
						<TextBlock Text="X" FontFamily="{DynamicResource PixelFont}" FontSize="13" />
					</Button>
				</StackPanel>
			</DockPanel>
			<StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Spacing="10"
				Margin="0,40,0,0"
			>
				<Button
					HorizontalAlignment="Center"
					Name="StartStopButton"
					Content="â¬¤"
					Foreground="Red"
					FontSize="32"
					Cursor="Hand"
					Click="Recording_Click"
				/>
				<Button
					HorizontalAlignment="Center"
					Name="ChoosePathButton"
					Classes="PixelButton"
					Content="Choose Path"
					FontSize="8"
					Click="ChoosePath_Click"
					/>
				<TextBlock
					Name="PathDisplay"
					Text="The file will save on desktop"
					Foreground="White"
					HorizontalAlignment="Center"
					TextAlignment="Center"
				/>
				<components:WaveformDisplay
					Name="WaveformDisplay"
					Width="350"
					Height="100"
					Margin="0,20,0,0"
				/>
			</StackPanel>
		</DockPanel>	
	</Border>
</Window>
